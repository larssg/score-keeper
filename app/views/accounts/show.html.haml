- title "Details for #{h(@account.name)}"
.list
  %table
    %tr
      %th Name
      %th Display name
      %th E-mail
      %th Matches
      %th Actions
    - @account_users.each do |user|
      %tr{ :class => cycle('even', 'odd') }
        %td= h(user.name)
        %td= h(user.display_name)
        %td= mail_to user.email
        %td= user.game_participations.sum(:matches_played)
        %td= link_to 'Impersonate', impersonate_session_path(user), :method => :put