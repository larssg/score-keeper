.list
  %h3
    = title
    - if details.length > 0
      %span.details= details
  %table{ :id => board_id }
    %thead
      %tr
        %th= '&nbsp;'
        %th= '&nbsp;'
        - if start_at == 1
          %th= '&nbsp;'
        %th= t('dashboard.leader_boards.person')
        %th= t('dashboard.leader_boards.ranking')
        %th= t('dashboard.leader_boards.played')
        %th= t('dashboard.leader_boards.won')
        %th= t('dashboard.leader_boards.lost')
        %th= t('dashboard.leader_boards.win_percentage')
        %th{ :title => t('dashboard.leader_boards.goal_diff_avg') }= t('dashboard.leader_boards.diff_avg')

    %tbody
      - game_participations.each_with_index do |game_participation, index|
        %tr{ :class => cycle('even', 'odd') }
          %td= check_box_tag 'user[]', game_participation.user_id, false, :id => "compare_user_#{game_participation.user_id}"
          %td= index + start_at
          - if start_at == 1
            %td
              - if game_participation.user.created_at <= 7.days.ago
                = position_icon(@positions[game_participation.user_id])
                = '(' + @positions[game_participation.user_id][:then].to_s + ')' unless @positions[game_participation.user_id].blank?
              - else
                &nbsp;
          %td
            = link_to image_tag('icons/game.png', :class => 'team', :alt => t('dashboard.leader_boards.show_users_matches')), game_matches_path(@game, :filter => game_participation.user_id)
            = user_link_full(@game, game_participation.user)
          %td= game_participation.ranking
          %td= game_participation.matches_played
          %td= game_participation.matches_won
          %td= game_participation.matches_lost
          %td= game_participation.winning_percentage.to_s + '%'
          %td= game_participation.difference_average
      - reset_cycle

  - if start_at == 1
    .notes= t('dashboard.leader_boards.position_arrow_help')
  = submit_tag t('dashboard.leader_boards.compare'), :class => 'submit'