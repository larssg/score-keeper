- title t('users.users'), :show => true

#userlist.clear
  - all_users.each_with_index do |user, index|
    .column.span-9{ :class => index.odd? ? 'last' : nil }
      .user
        .image
          - if user.mugshot
            = link_to image_tag(user.mugshot.public_filename(:thumb), :alt => h(user.name)), edit_user_path(user)
        .login= user.login
        .name= link_to user.name, edit_user_path(user)
        .role= user.is_admin? ? t('users.super_admin') : (user.is_account_admin? ? t('users.admin') : t('users.normal'))
        .email= mail_to user.email
        .created_at= I18n.l(user.created_at, :format => 'short')
        - if account_admin?
          .admin
            = link_to t('users.edit'), edit_user_path(user)
            = link_to user.enabled? ? t('users.disable') : t('users.enable'), user_path(user, :user => { :enabled => !user.enabled? }), :method => :put
            = link_to t('users.remove'), user_path(user), :method => :delete, :confirm => t('users.are_you_sure')

- if account_admin?
  - content_for :sidebar do
    %h3= t('users.administration')
    = link_to t('users.create_user'), new_user_path